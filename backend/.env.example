# ============================================
# Niti-Setu Backend â€” Environment Variables (Example)
# ============================================

# Server
PORT=3000
NODE_ENV=development

# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/dbname

# Groq API Keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# ElevenLabs API Key
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Groq Model
GROQ_MODEL=llama-3.3-70b-versatile

# Embedding Model (local, processed via Transformers.js)
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# SMTP Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=2525
SMTP_EMAIL=your_email
SMTP_PASSWORD=your_password
FROM_EMAIL=noreply@nitisetu.gov.in
FROM_NAME=Niti-Setu

# JWT Secrets
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRE=30d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here

# Neo4j Knowledge Graph (Aura DB)
NEO4J_URI=neo4j+s://your_neo4j_instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=neo4j
