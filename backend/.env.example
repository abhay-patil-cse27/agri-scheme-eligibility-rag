# ============================================
# Niti-Setu Backend — Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# Server
PORT=3000
NODE_ENV=development

# MongoDB Atlas Connection String
# Get from: Atlas Dashboard → Connect → Drivers → Node.js
# Replace <password> with your database user password
MONGODB_URI=mongodb+srv://nitisetu_admin:<password>@<cluster>.mongodb.net/nitisetu_db?retryWrites=true&w=majority

# Groq API Key
# Get from: https://console.groq.com → API Keys
GROQ_API_KEY=gsk_your_key_here

# Groq Model
GROQ_MODEL=llama-3.1-70b-versatile

# Embedding Model (local, no API key needed)
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
